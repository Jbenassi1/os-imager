{
  "_comment": "Builds a packer debian 9 image in AWS",
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "{{ user `aws_region` }}",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "{{ user `ami_filter` }}",
          "root-device-type": "ebs"
        },
        "owners": [
          "{{ user `ami_owner` }}"
        ],
        "most_recent": true
      },
      "instance_type": "t3.medium",
      "ssh_username": "{{ user `ssh_username` }}",
      "ami_name": "saltstack/base/debian/strech.9/{{timestamp}}",
      "ami_users": [
        "883373499178",
        "540082622920"
      ],
      "run_tags": {
        "Name": "Packer Debian 9 Builder"
      },
      "launch_block_device_mappings": [
        {
          "device_name": "xvda",
          "volume_size": 20,
          "volume_type": "gp2",
          "delete_on_termination": true
        }
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo apt install git -y",
        "sudo apt install vim -y"
      ]
    }
  ]
}
