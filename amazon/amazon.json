{
	"variables": {
		"iso_url": "http://mirror.chpc.utah.edu/pub/archlinux/iso/latest/archlinux-2017.10.01-x86_64.iso",
		"iso_checksum_url": "http://mirror.chpc.utah.edu/pub/archlinux/iso/latest/sha1sums.txt",
		"iso_checksum_type": "sha1",
		"ssh_timeout": "20m",
		"headless": "True"
	},
	"builders": [
		{
			"type": "qemu",
			"headless": "True",
			"iso_url": "{{ user `iso_url` }}",
			"iso_checksum_url": "{{ user `iso_checksum_url` }}",
			"iso_checksum_type": "{{ user `iso_checksum_type` }}",
			"http_directory": "srv",
			"boot_wait": "5s",
			"boot_command": [
				"<tab> cow_spacesize=2G<enter>",
				"<wait1m10s>curl -O http://{{.HTTPIP}}:{{.HTTPPort}}/enable-ssh.sh<enter><wait5>",
				"curl -o /pkgs.list http://{{.HTTPIP}}:{{.HTTPPort}}/pkgs.list<enter><wait5>",
				"bash enable-ssh.sh<enter>"
			],
			"disk_size": 10240,
			"ssh_username": "salt",
			"ssh_password": "salt",
			"ssh_timeout": "{{ user `ssh_timeout` }}",
			"vnc_bind_address": "0.0.0.0",
			"qemuargs": [
				[ "-m", "4096m" ],
				[ "--smp", "cores=2,threads=1,sockets=1"],
				[ "--enable-kvm"]
			],
			"name": "amazon.qcow2",
			"vnc_bind_address": "0.0.0.0"
		}
	],
	"provisioners": [
		{
			"type": "shell",
			"execute_command": "{{ .Vars }} sudo -E -S bash '{{ .Path }}'",
			"script": "scripts/install-amazon.sh"
		}
	]
}
